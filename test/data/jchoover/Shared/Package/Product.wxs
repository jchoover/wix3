<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="App" Language="1033" Version="1.1.0.0" Manufacturer="Some Random Company Inc." UpgradeCode="cfbe7c62-a502-433c-b36d-a7008488b383">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate />

		<Feature Id="ProductFeature" Title="Package" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
    
    <Property Id="AUTOMATICUPDATE" Secure="yes" Value="1" />
    <Property Id="BUNDLE_UPGRADE_CODE" Secure="yes" />
    
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder">
        <Directory Id="CompanyDir" Name="Some Random Company Inc.">
				  <Directory Id="INSTALLFOLDER" Name="App" />
        </Directory>
			</Directory>
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component>
        <File Id="ReadMe" Name="Readme.txt" Compressed="yes"/>
      </Component>
      <Component>
        <File Id="Ini" Name="Setup.ini" Compressed="yes" />
        <IniFile Id="Ini.AUTOMATICUPDATE" Name="Setup.ini" Directory="INSTALLFOLDER" Action="addLine"  Section="Config" Key="AUTOMATICUPDATE" Value="[AUTOMATICUPDATE]"/>
        <IniFile Id="Ini.BUNDLE_UPGRADE_CODE" Name="Setup.ini" Directory="INSTALLFOLDER" Action="addLine"  Section="Config" Key="BUNDLE_UPGRADE_CODE" Value="[BUNDLE_UPGRADE_CODE]"/>        
      </Component>
		</ComponentGroup>
	</Fragment>
</Wix>
